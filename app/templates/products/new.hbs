<div class="container">
<form>
<div class="form-group row">
  <label class="col-6 col-form-label">Name</label>
  <div class="col-6">
    {{input class="form-control form_size" type="text" value=name}}
  </div>
</div>
<div class="form-group row">
  <label class="col-6 col-form-label">Description</label>
  <div class="col-6">
    {{input class="form-control form_size" type="text" value=description}}
  </div>
</div>
<div class="form-group row">
  <label class="col-6 col-form-label">Price</label>
  <div class="col-6">
    {{input class="form-control form_size" type="number" value=price}}
  </div>
</div>
</form>
<button type="submit" class="btn btn-primary" {{action "formSubmit"}}>Submit</button>
</div>